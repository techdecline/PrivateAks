
{
    "mode": "All",
    "parameters": {
        "tagName": {
            "type": "String",
            "metadata": {
                "displayName": "Tag Name",
                "description": "Name of the tag, such as linktohub"
            },
            "defaultValue": "linktohub"
        },
        "tagValue": {
            "type": "String",
            "metadata": {
                "displayName": "Tag Value",
                "description": "Value of the tag, such as true"
            },
            "defaultValue": "true"
        },
        "virtualNetworkId": {
            "type": "String",
            "metadata": {
                "description": "ID of the virtual network to link."
            }
        },
        "privateDnsZoneName": {
            "type": "String",
            "metadata":{
                "description": "Dummy Value for provider bug."
            },
            "defaultValue": "*"
        }
    },
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Network/privateDnsZones"
                },
                {
                    "field": "[concat('tags[', parameters('tagName'), ']')]",
                    "equals": "[parameters('tagValue')]"
                }
            ]
        },
        "then": {
            "effect": "deployIfNotExists",
            "details": {
                "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                "existenceCondition": {
                    "allOf": [
                        {
                            "field": "name",
                            "equals": "'/link-', [split(parameters('virtualNetworkId'), '/')[sub(length(split(parameters('virtualNetworkId'), '/')), 1)]])]"
                        }
                    ]
                },
                "roleDefinitionIds": [
                    "/providers/Microsoft.Authorization/roleDefinitions/b12aa53e-6015-4669-85d0-8515ebb3ae7f"
                ],
                "deployment": {
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "privateDnsZoneName": {
                                    "type": "String",
                                    "metadata": {
                                        "description": "Name of the private DNS zone."
                                    }
                                },
                                "virtualNetworkId": {
                                    "type": "String",
                                    "metadata": {
                                    "description": "ID of the virtual network to link."
                                    }
                                }
                            },
                            "variables": {
                                "virtualNetworkName": "[split(parameters('virtualNetworkId'), '/')[sub(length(split(parameters('virtualNetworkId'), '/')), 1)]]"
                            },
                            "resources": [
                                {
                                    "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                                    "apiVersion": "2018-09-01",
                                    "name": "[concat(parameters('privateDnsZoneName'), '/link-', variables('virtualNetworkName'))]",
                                    "location": "global",
                                    "properties": {
                                        "virtualNetwork": {
                                            "id": "[parameters('virtualNetworkId')]"
                                        },
                                        "registrationEnabled": false
                                    }
                                }
                            ]
                        },
                        "parameters": {
                            "privateDnsZoneName": {
                                "value": "[field('name')]",
                                "type": "String"
                            },
                                "virtualNetworkId": {
                                "value": "[parameters('virtualNetworkId')]",
                                "type": "String"
                            }
                        }
                    }
                }
            }
        }
    }
}